FROM node:18.5.0-buster-slim
ARG TOKEN_DISCORD
ENV TOKEN_DISCORD=${TOKEN_DISCORD}
ARG TOKEN_UPTIME
ENV TOKEN_UPTIME=${TOKEN_UPTIME}
ARG TOKEN_BOTSONDISCORD
ENV TOKEN_BOTSONDISCORD=${TOKEN_BOTSONDISCORD}
ARG TOKEN_DISCORDBOTLIST
ENV TOKEN_DISCORDBOTLIST=${TOKEN_DISCORDBOTLIST}
ARG TOKEN_DISCORDS
ENV TOKEN_DISCORDS=${TOKEN_DISCORDS}
ARG TOKEN_DISCORDBOTS
ENV TOKEN_DISCORDBOTS=${TOKEN_DISCORDBOTS}
ARG TOKEN_MOTIONDEVELOPMENT
ENV TOKEN_MOTIONDEVELOPMENT=${TOKEN_MOTIONDEVELOPMENT}
ARG TOKEN_SAUCENAO
ENV TOKEN_SAUCENAO=${TOKEN_SAUCENAO}
ARG LOGIN_FA_COOKIE_A
ENV LOGIN_FA_COOKIE_A=${LOGIN_FA_COOKIE_A}
ARG LOGIN_FA_COOKIE_B
ENV LOGIN_FA_COOKIE_B=${LOGIN_FA_COOKIE_B}
ARG LOGIN_E621_USER
ENV LOGIN_E621_USER=${LOGIN_E621_USER}
ARG TOKEN_E621
ENV TOKEN_E621=${TOKEN_E621}
ARG DB_DIALECT
ENV DB_DIALECT=${DB_DIALECT}
ARG DB_HOST
ENV DB_HOST=${DB_HOST}
ARG MARIADB_DATABASE
ENV MARIADB_DATABASE=${MARIADB_DATABASE}
ARG MARIADB_USERNAME
ENV MARIADB_USERNAME=${MARIADB_USERNAME}
ARG MARIADB_PASSWORD
ENV MARIADB_PASSWORD=${MARIADB_PASSWORD}
ARG MARIADB_PORT
ENV MARIADB_PORT=${MARIADB_PORT}

# RUN apk add --no-cache git

# Create app directory
WORKDIR /usr/src/app

# Get app dependencies
COPY package*.json ./

# building app
RUN npm ci --only=production

# Bundle app source
COPY . .

# Cleanup app source
RUN rm -fv ./docker-entrypoint.sh ./Dockerfile 

# start up the bot
COPY ./docker-entrypoint.sh /usr/local/bin/
ENTRYPOINT [ "docker-entrypoint.sh" ]